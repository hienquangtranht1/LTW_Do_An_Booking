@{
    Layout = null;
    var adminName = Context.Session.GetString("AdminName");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body { min-height: 100vh; }
        .sidebar {
            min-width: 220px;
            max-width: 220px;
            min-height: 100vh;
            background: #343a40;
            color: #fff;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
        }
        .sidebar a.active, .sidebar a:hover {
            background: #495057;
        }
        .admin-content {
            padding: 32px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar">
            <h4 class="p-3">Admin</h4>
            <a href="/Admin" class="@(ViewBag.Active == "Dashboard" ? "active" : "")">Dashboard</a>
            <a href="/Admin/Users" class="@(ViewBag.Active == "Users" ? "active" : "")">Người dùng</a>
            <a href="/Admin/Doctors" class="@(ViewBag.Active == "Doctors" ? "active" : "")">Bác sĩ</a>
            <a href="/Admin/Patients" class="@(ViewBag.Active == "Patients" ? "active" : "")">Bệnh nhân</a>
            <a href="/Admin/Departments" class="@(ViewBag.Active == "Departments" ? "active" : "")">Khoa</a>
            <a href="/Admin/Appointments" class="@(ViewBag.Active == "Appointments" ? "active" : "")">Lịch hẹn</a>
            <a href="/Admin/Reviews" class="@(ViewBag.Active == "Reviews" ? "active" : "")">Đánh giá</a>
            <a href="/Admin/WorkSchedules" class="@(ViewBag.Active == "WorkSchedules" ? "active" : "")">Lịch làm việc bác sĩ</a>
            <form asp-controller="Admin" asp-action="Logout" method="post" class="m-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger w-100">Đăng xuất</button>
            </form>
        </nav>
        <div class="flex-grow-1 admin-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
