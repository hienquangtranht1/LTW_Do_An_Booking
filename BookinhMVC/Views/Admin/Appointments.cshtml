@model IEnumerable<BookinhMVC.Models.LichHen>
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Appointments";
    ViewBag.Title = "Quản lý Lịch hẹn";
}
<h2>Quản lý Lịch hẹn</h2>
<a href="/Admin/CreateAppointment" class="btn btn-success mb-2">Thêm mới</a>
<table class="table table-bordered">
    <tr>
        <th>ID</th><th>Bệnh nhân</th><th>Bác sĩ</th><th>Ngày giờ</th><th>Trạng thái</th><th>Thao tác</th>
    </tr>
    @foreach(var l in Model) {
        <tr>
            <td>@l.MaLich</td>
            <td>@l.BenhNhan?.HoTen</td>
            <td>@l.BacSi?.HoTen</td>
            <td>@l.NgayGio.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@l.TrangThai</td>
            <td>
                <a href="/Admin/AppointmentDetails/@l.MaLich" class="btn btn-info btn-sm">Xem</a>
                <a href="/Admin/EditAppointment/@l.MaLich" class="btn btn-warning btn-sm">Sửa</a>
                <a href="/Admin/DeleteAppointment/@l.MaLich" class="btn btn-danger btn-sm">Xóa</a>
            </td>
        </tr>
    }
</table> 